{% extends 'base.html.twig' %}
{% block title %}Preventivo{% endblock %}
{% block body %}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-9">
                <h3>Profilo <small>Cambia Password</small></h3>
            </div>
        </div>
        <div class="mt-3 col-4">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
                        {{ form_widget(form) }}
                        <div class="mt-3">
                            <input class="btn btn-success" type="submit" value="Cambia Password" />
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <script>
        $(document).ready(function() {
            $('#fos_user_change_password_form_current_password').addClass('mb-3 form-control');
            $('#fos_user_change_password_form_plainPassword_first').addClass('mb-3 form-control');
            $('#fos_user_change_password_form_plainPassword_second').addClass('mb-3 form-control');
        });
    </script>
    <style>
        form {
            width:100%;
        }
    </style>
{% endblock %}