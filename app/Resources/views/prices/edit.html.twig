{% extends 'base.html.twig' %}
{% block title %}Listino Prezzi{% endblock %}
{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-12">
                    <h3>Prezzi <small>Modifica</small></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            {{ form_start(form) }}

                            {{ form_label(form.canonical) }}
                            {{ form_widget(form.canonical) }}

                            {{ form_label(form.price) }}
                            {{ form_widget(form.price) }}

                            <br/>

                            {{ form_widget(form.submit) }}
                            <a href="{{ url('prezzi_listino') }}" class="btn btn-outline-warning">Annulla</a>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}