{% extends 'base.html.twig' %}
{% block title %}Impostazioni{% endblock %}
{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-9">
                    <h3>Impostazioni <small>Utenti > Reset Password</small></h3>
                </div>
                <div class="col-3"></div>
            </div>
            <div class="row mt-3">
                {{ form_start(form) }}
                {{ form_label(form.username) }}
                {{ form_widget(form.username) }}
                {{ form_widget(form.password) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}