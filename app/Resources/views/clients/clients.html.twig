{% extends 'base.html.twig' %}
{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-12">
                    <h3>Clienti <small>Lista</small></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                    <tr>
                                        <th>
                                            ID
                                        </th>
                                        <th>
                                            Cliente
                                        </th>
                                        <th>
                                            Indirizzo
                                        </th>
                                        <th>
                                            Telefono
                                        </th>
                                        <th>
                                            E-Mail
                                        </th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for item in clients %}
                                        <tr>
                                            <td class="py-1">
                                                {{ item.id }}
                                            </td>
                                            <td>
                                                {{ item.name }}
                                            </td>
                                            <td>
                                                {{ item.address }}, {{ item.postalCode }}, {{ item.city }} ({{ item.province }})
                                            </td>
                                            <td>
                                                {{ item.phone }}
                                            </td>
                                            <td>
                                                {{ item.email }}
                                            </td>
                                            <td style="width: 255px;">
                                                <a href="" class="btn btn-danger btn-sm float-right mr-1">
                                                    <span class="mdi mdi-delete"></span>
                                                </a>
                                                <a href="" class="btn btn-warning btn-sm float-right mr-1">
                                                    <span class="mdi mdi-table-edit"></span>
                                                </a>
                                                <a href="{{ url('vedi_clienti',{'id' : 1}) }}" class="btn btn-primary btn-sm float-right mr-1">
                                                    <span class="mdi mdi-eye-outline"></span>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}