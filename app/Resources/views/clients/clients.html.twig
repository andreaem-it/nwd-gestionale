{% extends 'base.html.twig' %}
{% block body %}
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-11">
                    <h3>Clienti <small>Lista</small></h3>
                </div>
                <div class="col-1">
                    <a href="{{ url('nuovo_cliente') }}" class="btn btn-success mb-2 px-2 float-right">Aggiungi Cliente</a>
                </div>
            </div>
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                    <tr>
                                        <th>
                                            ID
                                        </th>
                                        <th>
                                            Cliente
                                        </th>
                                        <th>
                                            Referente
                                        </th>
                                        <th>
                                            Indirizzo
                                        </th>
                                        <th>
                                            Telefono
                                        </th>
                                        <th>
                                            E-Mail
                                        </th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for item in clients %}
                                        <tr>
                                            <td class="py-1">
                                                {{ item.id }}
                                            </td>
                                            <td>
                                                {{ item.finalName }}
                                            </td>
                                            <td>
                                                {{ func.convertUName(item.refereer) }}
                                            </td>
                                            <td>
                                                {{ item.address }}, {{ item.postalCode }}, {{ item.city }} ({{ item.province }})
                                            </td>
                                            <td>
                                                <a href="tel:{{ item.phone }}">{{ item.phone }}</a>
                                            </td>
                                            <td>
                                                <a href="mailto:{{ item.email }}">{{ item.email }}</a>
                                            </td>
                                            <td style="width: 255px;">
                                                <a href="{{ url('elimina_clienti', { 'id' : item.id }) }}" class="btn btn-danger btn-sm float-right mr-1">
                                                    <span class="mdi mdi-delete"></span>
                                                </a>
                                                <a href="{{ url('modifica_cliente' , { 'id' : item.id }) }}" class="btn btn-warning btn-sm float-right mr-1">
                                                    <span class="mdi mdi-table-edit"></span>
                                                </a>
                                                <a href="{{ url('vedi_clienti',{'id' : item.id }) }}" class="btn btn-primary btn-sm float-right mr-1">
                                                    <span class="mdi mdi-eye-outline"></span>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}